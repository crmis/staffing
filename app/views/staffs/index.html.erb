<p id="notice"><%= notice %></p>

<h1>Listing Staffs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Hours</th>
      <th>Job role</th>
      <th>Mon start</th>
      <th>Mon end</th>
      <th>Tue start</th>
      <th>Tue end</th>
      <th>Wed start</th>
      <th>Wed end</th>
      <th>Thu start</th>
      <th>Thu end</th>
      <th>Fri start</th>
      <th>Fri end</th>
      <th>Sat start</th>
      <th>Sat end</th>
      <th>Sun start</th>
      <th>Sun end</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.name %></td>
        <td><%= staff.hours %></td>
        <td><%= staff.job_role %></td>
        <td><%= staff.mon_start %></td>
        <td><%= staff.mon_end %></td>
        <td><%= staff.tue_start %></td>
        <td><%= staff.tue_end %></td>
        <td><%= staff.wed_start %></td>
        <td><%= staff.wed_end %></td>
        <td><%= staff.thu_start %></td>
        <td><%= staff.thu_end %></td>
        <td><%= staff.fri_start %></td>
        <td><%= staff.fri_end %></td>
        <td><%= staff.sat_start %></td>
        <td><%= staff.sat_end %></td>
        <td><%= staff.sun_start %></td>
        <td><%= staff.sun_end %></td>
        <td><%= link_to 'Show', staff %></td>
        <td><%= link_to 'Edit', edit_staff_path(staff) %></td>
        <td><%= link_to 'Destroy', staff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

