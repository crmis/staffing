<div class="container">
    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">Activities</div>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Activity name</th>
                        <th>Activity duration</th>
                        <th>Activity desctiption</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>

                <tbody>
                    <% @activities.each do |activity| %>
                    <tr>
                        <td><%= activity.activity_name %></td>
                        <td><%= activity.activity_duration %></td>
                        <td><%= activity.activity_desctiption %></td>
                        <!--<td><%#= link_to 'Show', activity %></td>-->
                        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
                        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>

            <br>

            <%= link_to 'New Activity', new_activity_path, :class => "btn btn-flat btn-info" %>
        </div>
    </div>
</div>
